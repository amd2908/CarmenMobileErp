<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#41ab8e" />
            <gradient android:angle="-90" android:startColor="#41ab8e" android:endColor="#07694e"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#07694e" />
            <solid android:color="#41ab8e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#07694e" />
            <gradient android:angle="-90" android:startColor="#41ab8e" android:endColor="#41ab8e" />
        </shape>
    </item>
</selector>