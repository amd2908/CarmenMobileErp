<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryBlue</item>
        <item name="colorAccent">@color/colorCheckActive</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/robo_condensed_light</item>
    </style>

    <style name="AppTheme.ActionBarSpecial">
        <item name="colorAccent">@color/white</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:textColor">@color/colorPrimaryBlue</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:editTextColor">#FFFFFF</item>
        <item name="android:textColorHint">#99FFFFFF</item>
        <item name="android:fontFamily">@font/robo_condensed_light</item>
    </style>

    <style name="AppTheme.ActionBar">
        <item name="colorAccent">@color/colorPrimaryBlue</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:textColor">@color/colorPrimaryBlue</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:editTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">#99FFFFFF</item>
        <item name="android:fontFamily">@font/robo_condensed_light</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryBlue</item>
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryBlue</item>
        <item name="android:textColor">@color/colorPrimaryBlue</item>
        <item name="android:textColorPrimary">@color/colorPrimaryBlue</item>
        <item name="android:fontFamily">@font/robo_condensed_light</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTextCustomHolo" parent="android:Widget.EditText">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="EditText.Login2" parent="Base.Widget.AppCompat.Light.PopupMenu">
        <item name="android:textColor">@color/hellBlack</item>
        <item name="android:textColorHint">@color/hellBlack</item>
        <item name="colorAccent">@color/hellBlack</item>
        <item name="colorControlNormal">@color/colorPrimaryBlue</item>
        <item name="colorControlActivated">#2cb003</item>
        <item name="textColorError">#DC0903</item>
        <item name="android:fontFamily">@font/robo_condensed_light</item>
    </style>

    <style name="EditText.Login" parent="Base.Widget.AppCompat.Light.PopupMenu">
        <item name="android:textColor">@color/hellBlack</item>
        <item name="android:textColorHint">@color/hellBlack</item>
        <item name="colorAccent">@color/hellBlack</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">#2cb003</item>
        <item name="textColorError">#DC0903</item>
    </style>

    <style name="EditText.Checkbox" parent="Base.Widget.AppCompat.Light.PopupMenu">
        <item name="android:textColor">@color/hellBlack</item>
        <item name="android:textColorHint">@color/hellBlack</item>
        <item name="colorAccent">@color/hellBlack</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">#2cb003</item>
        <item name="textColorError">#DC0903</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
